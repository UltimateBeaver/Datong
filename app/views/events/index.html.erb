<h3>Upcoming Events</h3>

<!--display calendar-->
<script>
  $( document ).ready(function()
    {$('#calendar').fullCalendar({
    events: '/events.json',
    header: {
      left: 'today prev,next',
      center: 'title',
      right: 'month,agendaWeek,agendaDay,list'
    },
    defaultView: 'agendaWeek',
    selectable: true,
    selectHelper: true,
    eventLimit: true,
    editable: true
    });
  });
</script>


<div id="calendar"></div>


<% if @event_admin %>
  <%= link_to 'New Event', new_event_path %>
<% end %>

<%= render partial: "table", locals: {events: @upcoming_events}%>

<h3>Past Events</h3>
<%= render partial: "table", locals: {events: @old_events}%>
